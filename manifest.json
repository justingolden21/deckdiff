{
  "name": "DeckDIFF",
  "short_name": "DeckDIFF",
  "version": "0.9.0",
  "description": "Diffing for Hearthstone decks",
  "icons": {
    "128": "img/icon.png"
  },
  "manifest_version": 2,
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_popup": "ui.html"
  },
  "permissions": [
    "clipboardRead",
    "storage",
    "tabs",
    "https://api.hearthstonejson.com/"
  ],
  "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com https://use.fontawesome.com https://unpkg.com; object-src 'self'"
}